<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lunchmeet.lunchmeet.MapsActivity" >
    <include
        layout = "@layout/app_bar"
        android:id="@+id/app_bar">
    </include>
    <Button
        android:id="@+id/createGroupButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/holo_green_dark"
        android:padding="10dp"
        android:text="@string/createGroup"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/dissolveGroupButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/holo_red_dark"
        android:padding="10dp"
        android:text="@string/dissolveGroup"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/leaveGroupButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/holo_red_dark"
        android:padding="10dp"
        android:text="@string/leaveGroup"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


</fragment>
